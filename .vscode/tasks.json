{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Install",
      "type": "shell",
      "command": "npm i"
    },
    {
      "label": "Clean install",
      "type": "shell",
      "command": "npm ci"
    },
    {
      "label": "Run dev server",
      "type": "shell",
      "command": "npm run dev"
    },
    {
      "label": "Build for production",
      "type": "shell",
      "command": "npm run build"
    },
    {
      "label": "start production server",
      "type": "shell",
      "command": "docker-compose up"
    },
    {
      "label": "build wasm",
      "type": "shell",
      "command": "cd src-wasm && wasm-pack build --target web --out-name index"
    },
    {
      "label": "run tests",
      "type": "shell",
      "command": "npm test"
    }
  ]
}